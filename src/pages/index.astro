        function displayAnalysis() {
            const { day, month } = currentData;
            const universalYear = calculateUniversalYear(2026);
            const personalYear = calculatePersonalYear(day, month, universalYear);

            const currentMonth = new Date().getMonth() + 1;

            let html = `
                <div class="card">
                    <h2 class="section-title">2026 Monthly Predictions</h2>
                    <div style="background: linear-gradient(135deg, #f0f2f8 0%, #e8eaf5 100%); padding: 15px; border-radius: 12px; margin-bottom: 20px; border-left: 4px solid #6b3fa0;">
                        <p style="color: #2d1b69; font-size: 0.9rem; margin: 0; font-weight: 600;">
                            üìÖ All monthly forecasts for 2026 based on your Personal Year <strong style="font-size: 1.2rem;">${personalYear}</strong>
                        </p>
                    </div>
            `;

            // Display all 12 months
            for (let m = 1; m <= 12; m++) {
                const personalMonth = calculatePersonalMonth(personalYear, m);
                const monthMeaning = getPersonalYearMeaning(personalMonth);
                const isCurrent = m === currentMonth;

                html += `
                    <div class="month-card ${isCurrent ? 'current' : ''}">
                        <h4>
                            <span style="display: flex; align-items: center; gap: 8px;">
                                ${isCurrent ? '‚ú®' : 'üìÖ'} ${getMonthName(m)} 2026
                                ${isCurrent ? '<span style="font-size: 0.75rem; background: rgba(255,255,255,0.3); padding: 2px 8px; border-radius: 20px;">Current</span>' : ''}
                            </span>
                            <span class="month-num">${personalMonth}</span>
                        </h4>
                        <p style="margin-top: 8px;"><strong>${monthMeaning.title}</strong> ‚Üí ${monthMeaning.desc}</p>
                    </div>
                `;
            }

            html += `</div>`;

            // Custom month/year selector
            html += `
                <div class="card" style="background: linear-gradient(135deg, #f9f5ff 0%, #f0ebff 100%); border: 2px solid #8b5fbf;">
                    <h2 class="section-title">üîÆ Custom Prediction</h2>
                    <div style="background: white; padding: 15px; border-radius: 12px; margin-bottom: 15px;">
                        <p style="color: #666; font-size: 0.9rem; margin: 0;">
                            Select any month and year to get your personal prediction
                        </p>
                    </div>
                    <div class="month-selector">
                        <select id="customMonth">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                        <select id="customYear">
                            <option value="2026">2026</option>
                            <option value="2027">2027</option>
                            <option value="2028">2028</option>
                            <option value="2029">2029</option>
                            <option value="2030">2030</option>
                        </select>
                    </div>
                    <button class="btn" onclick="showCustomPrediction()">‚ú® Get Prediction</button>
                    <div id="customResult" style="margin-top: 15px;"></div>
                </div>
            `;

            document.getElementById('analysisSection').innerHTML = html;
        }

        function showCustomPrediction() {
            const { day, month } = currentData;
            const selectedMonth = parseInt(document.getElementById('customMonth').value);
            const selectedYear = parseInt(document.getElementById('customYear').value);

            const universalYear = calculateUniversalYear(selectedYear);
            const personalYear = calculatePersonalYear(day, month, universalYear);
            const personalMonth = calculatePersonalMonth(personalYear, selectedMonth);
            const monthMeaning = getPersonalYearMeaning(personalMonth);

            const resultHTML = `
                <div class="month-card current" style="animation: fadeIn 0.5s ease;">
                    <h4>
                        <span style="display: flex; align-items: center; gap: 8px;">
                            ‚ú® ${getMonthName(selectedMonth)} ${selectedYear}
                        </span>
                        <span class="month-num">${personalMonth}</span>
                    </h4>
                    <p style="margin-top: 8px;"><strong>${monthMeaning.title}</strong> ‚Üí ${monthMeaning.desc}</p>
                    <div style="margin-top: 12px; padding-top: 12px; border-top: 1px solid rgba(255,255,255,0.3); font-size: 0.78rem; color: rgba(255,255,255,0.9); display: flex; gap: 12px; flex-wrap: wrap;">
                        <span>Universal: <strong>${universalYear}</strong></span>
                        <span>‚Üí</span>
                        <span>Personal Year: <strong>${personalYear}</strong></span>
                        <span>‚Üí</span>
                        <span>Personal Month: <strong>${personalMonth}</strong></span>
                    </div>
                </div>
            `;

            document.getElementById('customResult').innerHTML = resultHTML;
        }

        function showSection(section) {
            // Remove active class from all buttons
            document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active'));

            // Hide all sections
            document.getElementById('gridSection').classList.add('hidden');
            document.getElementById('predictionsSection').classList.add('hidden');
            document.getElementById('analysisSection').classList.add('hidden');

            // Show selected section and activate button
            if (section === 'grid') {
                document.getElementById('gridSection').classList.remove('hidden');
                document.getElementById('gridBtn').classList.add('active');
            } else if (section === 'predictions') {
                document.getElementById('predictionsSection').classList.remove('hidden');
                document.getElementById('predBtn').classList.add('active');
            } else if (section === 'analysis') {
                document.getElementById('analysisSection').classList.remove('hidden');
                document.getElementById('analysisBtn').classList.add('active');
            }

            // Scroll to top
            window.scrollTo(0, 0);
        }
    </script>
