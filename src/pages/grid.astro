---
import Layout from '../components/Layout.astro';
---

<Layout title="Lo Shu Grid - Astro Girija Sharma">
    <style>
        .grid-card {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 15px;
        }

        .key-numbers {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 12px;
            margin-bottom: 20px;
        }

        .key-box {
            background: linear-gradient(135deg, #2d1b69 0%, #6b3fa0 100%);
            padding: 15px;
            border-radius: 12px;
            text-align: center;
            color: white;
            box-shadow: 0 4px 15px rgba(107, 63, 160, 0.3);
        }

        .key-label {
            font-size: 0.75rem;
            opacity: 0.9;
            margin-bottom: 5px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .key-value {
            font-size: 2.5rem;
            font-weight: 700;
        }

        .loshu-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            margin: 20px 0;
        }

        .loshu-cell {
            aspect-ratio: 1;
            background: linear-gradient(145deg, #fafbff 0%, #f5f7fb 100%);
            border-radius: 14px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
            padding: 10px;
            min-height: 90px;
        }

        .loshu-cell::before {
            content: '';
            position: absolute;
            inset: 0;
            border-radius: 14px;
            padding: 2px;
            background: linear-gradient(145deg, #e5e7f0, #d5d7e0);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
        }

        .loshu-cell.has-numbers {
            background: linear-gradient(145deg, #ffffff 0%, #f9f5ff 100%);
            box-shadow: 0 4px 15px rgba(107, 63, 160, 0.1);
        }

        .loshu-cell.has-numbers::before {
            background: linear-gradient(145deg, #6b3fa0, #8b5fbf);
        }

        .cell-number {
            position: absolute;
            top: 6px;
            left: 8px;
            font-size: 0.7rem;
            color: #2d1b69;
            font-weight: 700;
            background: rgba(107, 63, 160, 0.1);
            width: 20px;
            height: 20px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 2;
        }

        .loshu-cell.has-numbers .cell-number {
            background: linear-gradient(135deg, #6b3fa0, #8b5fbf);
            color: white;
        }

        .cell-planet {
            position: absolute;
            top: 6px;
            right: 8px;
            font-size: 0.6rem;
            color: #8b5fbf;
            font-weight: 700;
            text-transform: uppercase;
            z-index: 2;
        }

        .cell-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 1;
        }

        .cell-count {
            font-size: 2.2rem;
            color: #d5d7e0;
            font-weight: 900;
            line-height: 1;
        }

        .loshu-cell.has-numbers .cell-count {
            background: linear-gradient(135deg, #2d1b69, #6b3fa0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .cell-dots {
            display: flex;
            flex-wrap: wrap;
            gap: 4px;
            justify-content: center;
            margin-top: 8px;
            max-width: 60px;
        }

        .dot {
            width: 6px;
            height: 6px;
            background: linear-gradient(135deg, #6b3fa0, #8b5fbf);
            border-radius: 50%;
        }

        .grid-legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 15px;
            padding: 12px;
            background: linear-gradient(135deg, #f8f9fd 0%, #f0f2f8 100%);
            border-radius: 10px;
            font-size: 0.8rem;
        }

        .legend-item {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #555;
            font-weight: 500;
            font-size: 0.75rem;
        }

        .legend-box {
            width: 16px;
            height: 16px;
            border-radius: 6px;
            position: relative;
        }

        .legend-box.present {
            background: linear-gradient(145deg, #ffffff 0%, #f9f5ff 100%);
            border: 2px solid #6b3fa0;
        }

        .legend-box.missing {
            background: linear-gradient(145deg, #fafbff 0%, #f5f7fb 100%);
            border: 2px solid #d5d7e0;
        }

        .info-box {
            background: #f8f9fb;
            border-left: 4px solid #6b3fa0;
            padding: 12px 15px;
            margin-bottom: 10px;
            border-radius: 8px;
            font-size: 0.85rem;
        }

        .info-box h3 {
            color: #2d1b69;
            margin-bottom: 5px;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .info-box p {
            color: #666;
            line-height: 1.5;
            font-size: 0.8rem;
        }

        .missing-numbers {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin: 10px 0;
        }

        .missing-number {
            background: linear-gradient(135deg, #dc2626, #ef4444);
            color: white;
            padding: 8px 14px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
            box-shadow: 0 3px 10px rgba(220, 38, 38, 0.3);
        }

        .no-data {
            text-align: center;
            padding: 40px 20px;
            color: #666;
        }

        .no-data-btn {
            margin-top: 20px;
        }
    </style>

    <div id="gridContent">
        <div class="no-data">
            <p>Please enter your date of birth first</p>
            <a href="/" class="btn no-data-btn">Go to Home</a>
        </div>
    </div>

    <script is:inline src="/loshu-utils.js"></script>
    <script is:inline>
        const dob = sessionStorage.getItem('userDOB');

        if (dob) {
            const data = calculateLoShuChart(dob);
            const frequency = data.frequency;
            const missing = getMissingNumbers(frequency);
            const combinations = getCombinationMeaning(frequency);

            let html = `
                <div class="grid-card">
                    <h2 class="section-title">Your Key Numbers</h2>
                    <div class="key-numbers">
                        <div class="key-box">
                            <div class="key-label">Driver</div>
                            <div class="key-value">${data.driver}</div>
                        </div>
                        <div class="key-box">
                            <div class="key-label">Conductor</div>
                            <div class="key-value">${data.conductor}</div>
                        </div>
                    </div>
                </div>

                <div class="grid-card">
                    <h2 class="section-title">Your Lo Shu Grid</h2>
                    <div class="loshu-grid">
            `;

            const gridLayout = [4, 9, 2, 3, 5, 7, 8, 1, 6];
            gridLayout.forEach(num => {
                const count = frequency[num];
                const hasNumbers = count > 0;
                const dots = hasNumbers ? Array(count).fill(0).map(() => '<div class="dot"></div>').join('') : '';
                const planet = getPlanetName(num);
                html += `
                    <div class="loshu-cell ${hasNumbers ? 'has-numbers' : ''}">
                        <span class="cell-number">${num}</span>
                        <span class="cell-planet">${planet}</span>
                        <div class="cell-content">
                            <span class="cell-count">${count}</span>
                            <div class="cell-dots">${dots}</div>
                        </div>
                    </div>
                `;
            });

            html += `
                    </div>
                    <div class="grid-legend">
                        <div class="legend-item">
                            <div class="legend-box present"></div>
                            <span>Present</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-box missing"></div>
                            <span>Missing</span>
                        </div>
                    </div>
                </div>
            `;

            // Present numbers
            html += '<div class="grid-card"><h2 class="section-title">Present Numbers</h2>';
            for (let i = 1; i <= 9; i++) {
                if (frequency[i] > 0) {
                    const meaning = getNumberMeaning(i);
                    html += `
                        <div class="info-box">
                            <h3>${i} - ${getPlanetName(i)} (${meaning.aspect})</h3>
                            <p>${meaning.desc}</p>
                        </div>
                    `;
                }
            }
            html += '</div>';

            // Missing numbers
            if (missing.length > 0) {
                html += '<div class="grid-card"><h2 class="section-title">Missing Numbers</h2>';
                html += '<div class="missing-numbers">';
                missing.forEach(num => {
                    html += `<span class="missing-number">${num}</span>`;
                });
                html += '</div>';
                missing.forEach(num => {
                    const meaning = getNumberMeaning(num);
                    html += `
                        <div class="info-box">
                            <h3>${num} - ${getPlanetName(num)} (${meaning.aspect})</h3>
                            <p>This energy may be lacking in your chart.</p>
                        </div>
                    `;
                });
                html += '</div>';
            }

            // Combinations
            if (combinations.length > 0) {
                html += '<div class="grid-card"><h2 class="section-title">Active Lines & Planes</h2>';
                combinations.forEach(combo => {
                    html += `<div class="info-box"><p>${combo}</p></div>`;
                });
                html += '</div>';
            }

            document.getElementById('gridContent').innerHTML = html;
        }
    </script>
</Layout>
